<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutDeliveryDetails.CollectInStoreActivity">

    <TextView
        android:id="@+id/tv_collect_in_store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_collect_in_store_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/tv_collect_in_store_description"
        android:layout_width="331dp"
        android:layout_height="189dp"
        android:text="@string/collect_in_store_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bookstore"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/tv_collect_in_store_fraud_warning"
        android:layout_width="332dp"
        android:layout_height="33dp"
        android:layout_marginTop="19dp"
        android:text="@string/fraud_warning"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_collect_in_store_warning_sign"
        app:layout_constraintVertical_bias="0.024" />

    <ImageView
        android:id="@+id/iv_collect_in_store_warning_sign"
        android:layout_width="148dp"
        android:layout_height="126dp"
        android:contentDescription="@string/iv_warning_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_in_store_description"
        app:layout_constraintVertical_bias="0.097"
        app:srcCompat="@drawable/warning_sign" />

    <Button
        android:id="@+id/b_confirm_collect_in_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toEndOf="@+id/b_cancel_collect_in_store"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_in_store_fraud_warning"
        app:layout_constraintVertical_bias="0.527" />

    <ImageView
        android:id="@+id/iv_bookstore"
        android:layout_width="221dp"
        android:layout_height="116dp"
        android:contentDescription="@string/iv_bookstore_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_in_store_title"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/bookstore" />

    <Button
        android:id="@+id/b_cancel_collect_in_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_in_store_fraud_warning"
        app:layout_constraintVertical_bias="0.527" />

</androidx.constraintlayout.widget.ConstraintLayout>