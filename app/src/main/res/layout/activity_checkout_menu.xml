<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivityMenu">

    <Button
        android:id="@+id/b_card_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/b_card_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toEndOf="@+id/b_cash_payment"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_payment"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_cash_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="3dp"
        android:text="@string/b_cash_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_cash_payment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_checkout_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/checkout_menu_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/tv_checkout_menu_desc"
        android:layout_width="314dp"
        android:layout_height="240dp"
        android:text="@string/checkout_menu_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_book_shopping_cart"
        app:layout_constraintVertical_bias="0.151" />

    <ImageView
        android:id="@+id/iv_book_shopping_cart"
        android:layout_width="237dp"
        android:layout_height="163dp"
        android:contentDescription="@string/iv_book_shopping_cart_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkout_menu_title"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/book_shopping_cart" />

    <ImageView
        android:id="@+id/iv_cash_payment"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/iv_cash_payment_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkout_menu_desc"
        app:layout_constraintVertical_bias="0.176"
        app:srcCompat="@drawable/cash" />

    <ImageView
        android:id="@+id/iv_card_payment"
        android:layout_width="105dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/iv_card_payment_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/iv_cash_payment"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkout_menu_desc"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@drawable/creditcard" />

</androidx.constraintlayout.widget.ConstraintLayout>